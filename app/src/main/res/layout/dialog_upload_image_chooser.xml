<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingLeft="@dimen/padding_dialog_chooser"
    android:paddingRight="@dimen/padding_dialog_chooser">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Open"
            android:textSize="@dimen/font_size_title_chooser"
            android:textStyle="bold" />

    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_marginTop="@dimen/size_medium"
            android:layout_marginBottom="@dimen/size_medium"
            android:id="@+id/dia_take_photo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="@dimen/size_icon_chooser"
                android:layout_height="@dimen/size_icon_chooser"
                android:layout_margin="@dimen/margin_icon_chooser"
                android:src="@drawable/ic_camera" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/between_icon_text"
                android:layout_marginRight="@dimen/between_icon_text"
                android:gravity="center"
                android:text="From camera"
                android:textSize="@dimen/font_size_chooser" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/black"/>

        <LinearLayout
            android:layout_marginTop="@dimen/size_medium"
            android:layout_marginBottom="@dimen/size_medium"
            android:id="@+id/dia_library"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="@dimen/size_icon_chooser"
                android:layout_height="@dimen/size_icon_chooser"
                android:layout_margin="@dimen/margin_icon_chooser"
                android:src="@drawable/ic_gallery" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/between_icon_text"
                android:layout_marginRight="@dimen/between_icon_text"
                android:gravity="center"
                android:text="From Gallery"
                android:textSize="@dimen/font_size_chooser" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/dia_nev_bt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        android:gravity="right"
        android:text="Cancel"
        android:textSize="@dimen/font_size_chooser" />

</LinearLayout>