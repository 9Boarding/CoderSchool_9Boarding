<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:map="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_detail"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical"
    tools:context="com.minhnpa.coderschool.a9boarding.activity.DetailActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@android:color/transparent" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <fragment
            android:id="@+id/map"
            android:name="com.google.android.gms.maps.SupportMapFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            map:cameraBearing="0"
            map:cameraTargetLat="-33.796923"
            map:cameraTargetLng="150.922433"
            map:cameraTilt="0"
            map:cameraZoom="16"
            map:mapType="normal"
            map:uiCompass="false"
            map:uiRotateGestures="false"
            map:uiScrollGestures="false"
            map:uiTiltGestures="false"
            map:uiZoomControls="false"
            map:uiZoomGestures="false" />

        <android.support.design.widget.CoordinatorLayout
            android:layout_width="match_parent"
            android:layout_height="184dp"
            android:layout_alignParentBottom="true"
            android:background="@drawable/cover_style_pic"
            android:padding="16dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <android.support.design.widget.FloatingActionButton
                    android:id="@+id/ivFab"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:clickable="true"
                    android:src="@drawable/ic_bookmark"
                    app:elevation="6dp"
                    app:fabSize="normal" />

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/civProfile"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_alignParentBottom="true"
                    android:layout_gravity="center"
                    android:src="@drawable/sample_background" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/ivFab"
                    android:layout_marginLeft="16dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="40dp"
                    android:layout_toEndOf="@+id/civProfile"
                    android:layout_toRightOf="@+id/civProfile"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvFavCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableTop="@drawable/ic_bookmark_active"
                        android:text="21.6K"
                        android:textSize="12sp"
                        android:textStyle="bold" />
                </LinearLayout>
            </RelativeLayout>
        </android.support.design.widget.CoordinatorLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:id="@+id/information"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="16dp"
            android:paddingRight="16dp">

            <TextView
                android:layout_marginTop="@dimen/between_row_detail"
                android:layout_marginBottom="@dimen/between_row_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Address: 68 Ly Thuong Kiet, Phuong 10, TP.HCM"
                android:textColor="@color/black"
                android:textSize="@dimen/post_information_text_size"
                android:textStyle="bold" />

            <TextView
                android:layout_marginTop="@dimen/between_row_detail"
                android:layout_marginBottom="@dimen/between_row_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Area: 50m2"
                android:textColor="@color/black"
                android:textSize="@dimen/post_information_text_size" />

            <LinearLayout
                android:layout_marginTop="@dimen/between_row_detail"
                android:layout_marginBottom="@dimen/between_row_detail"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="Phone: 0938 513 856"
                    android:textColor="@color/black"
                    android:textSize="@dimen/post_information_text_size" />

                <ImageButton
                    android:background="@android:color/transparent"
                    android:layout_gravity="right"
                    android:id="@+id/btnCall"
                    android:src="@drawable/ic_call"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/tvDetail"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/information"
            android:padding="16dp"
            android:text="This is a description This is a description"
            android:textColor="@color/black" />
    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_margin="16dp"
        android:drawableLeft="@drawable/ic_comment"
        android:drawablePadding="8dp"
        android:drawableStart="@drawable/ic_comment"
        android:gravity="center"
        android:onClick="onCommentClick"
        android:text="@string/comment"
        android:textColor="@color/textview_comment"
        android:textSize="@dimen/text_size_medimum" />
</LinearLayout>
