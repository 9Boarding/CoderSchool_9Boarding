<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.minhnpa.coderschool.a9boarding.fragment.main.NotificationFragment">

    <ImageView
        android:id="@+id/icNotifi"
        android:layout_centerInParent="true"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/ic_notification_fragment"/>

    <TextView
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/icNotifi"
        android:text="No notification"
        android:layout_marginTop="12dp"
        android:textSize="24dp"/>

</RelativeLayout>
