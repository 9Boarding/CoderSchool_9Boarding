<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/toolbar_background"
        android:orientation="vertical">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/toolbar_background"
            android:minHeight="?attr/actionBarSize"
            app:title="ToolBar"
            app:titleTextColor="@android:color/white" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_small"
            android:background="@android:color/white"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_price"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:padding="@dimen/padding_small"
                android:text="Price:"
                android:textSize="24dp" />

            <EditText
                android:layout_width="0dp"
                android:layout_height="44dp"
                android:layout_weight="4"
                android:background="@drawable/edit_text_border"
                android:hint="1.200.000 vnd" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_small"
            android:background="@android:color/white"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_dien_tich"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:padding="@dimen/padding_small"
                android:text="Dien tich:"
                android:textSize="24dp" />

            <EditText
                android:layout_width="0dp"
                android:layout_height="44dp"
                android:layout_weight="4"
                android:background="@drawable/edit_text_border"
                android:hint="20 m2" />

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginLeft="@dimen/margin_small"
            android:layout_marginRight="@dimen/margin_small"
            android:background="@android:color/white">

            <TextView
                android:id="@+id/tv_address"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:padding="@dimen/margin_small"
                android:text="Address:"
                android:textSize="24sp" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="44dp"
                android:layout_alignRight="@+id/iv_place"
                android:layout_toRightOf="@id/tv_address"
                android:background="@drawable/edit_text_border"
                android:hint="Address" />

            <ImageButton
                android:id="@+id/iv_place"
                android:layout_width="@dimen/circle_btn_height"
                android:layout_height="@dimen/circle_btn_height"
                android:layout_alignParentRight="true"
                android:background="@android:color/transparent"
                android:src="@drawable/ic_place_36dp" />
        </RelativeLayout>

