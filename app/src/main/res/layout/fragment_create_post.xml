<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#dde1e3">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="?attr/actionBarSize"
                app:title="New Post"
                app:titleTextColor="@android:color/white"
                android:background="@color/toolbar_background"/>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:background="#60000000"
                android:layout_margin="8dp">
                <ImageView
                    android:id="@+id/iv_camera"
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_camera_alt"/>

            </FrameLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginRight="@dimen/margin_small"
                android:layout_marginLeft="@dimen/margin_small"
                android:layout_marginTop="@dimen/margin_small"
                android:background="#f6f7f8">

                <TextView
                    android:id="@+id/tv_price"
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_height="match_parent"
                    android:text="Price:"
                    android:textSize="24dp"
                    android:padding="@dimen/padding_small"/>

                <EditText
                    android:id="@+id/et_price"
                    android:layout_width="0dp"
                    android:layout_weight="4"
                    android:layout_height="44dp"
                    android:hint="1.200.000 vnd"/>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="@dimen/margin_small"
                android:background="#f6f7f8">

                <TextView
                    android:id="@+id/tv_dien_tich"
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_height="match_parent"
                    android:text="Dien tich:"
                    android:textSize="24dp"
                    android:padding="@dimen/padding_small"/>

                <EditText
                    android:id="@+id/et_num_m2"
                    android:layout_width="0dp"
                    android:layout_weight="4"
                    android:layout_height="44dp"
                    android:hint="20 m2"/>

            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_marginRight="@dimen/margin_small"
                android:layout_marginLeft="@dimen/margin_small"
                android:background="#f6f7f8">

                <TextView
                    android:id="@+id/tv_address"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Address:"
                    android:textSize="24sp"
                    android:padding="@dimen/margin_small"/>

                <EditText
                    android:id="@+id/et_address"
                    android:layout_width="wrap_content"
                    android:layout_height="44dp"
                    android:hint="Address"
                    android:layout_toRightOf="@id/tv_address"
                    android:layout_alignRight="@+id/iv_place"/>

                <ImageButton
                    android:id="@+id/iv_place"
                    android:layout_width="@dimen/circle_btn_height"
                    android:layout_height="@dimen/circle_btn_height"
                    android:layout_alignParentRight="true"
                    android:background="@android:color/transparent"
                    android:src="@drawable/ic_place_36dp"/>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="@dimen/margin_small"
                android:background="#f6f7f8">

                <TextView
                    android:id="@+id/tv_phome"
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_height="match_parent"
                    android:text="Phone:"
                    android:textSize="24dp"
                    android:padding="@dimen/padding_small"/>

                <EditText
                    android:id="@+id/et_phone"
                    android:layout_width="0dp"
                    android:layout_weight="4"
                    android:layout_height="44dp"
                    android:hint="0987000111"/>

            </LinearLayout>

            <EditText
                android:id="@+id/et_description"
                android:background="#f6f7f8"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_weight="5"
                android:hint="Description..."
                android:gravity="start"
                android:layout_marginLeft="@dimen/margin_small"
                android:layout_marginRight="@dimen/margin_small"/>


        </LinearLayout>
    </ScrollView>
</LinearLayout>